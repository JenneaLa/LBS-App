<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a15104163d.mapbox">

    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".WelcomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".PersonalInfo"></activity>
        <activity android:name=".HomePage"></activity>
        <activity android:name=".Display_Info"></activity>

        <activity android:name=".Reminder_Activity"></activity>

        <activity android:name=".ReminderAddActivity"
            android:label="Add Reminder"/>

        <activity android:name=".ReminderEditActivity"
            android:label="Edit Reminder"/>

        <activity android:name=".LicencesActivity"
            android:label="Licenses"/>

        <receiver android:name=".AlarmReceiver"/>
        <receiver android:name=".BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>


        <activity android:name=".Other"
            android:label="Additional Help"/>

    </application>


</manifest>